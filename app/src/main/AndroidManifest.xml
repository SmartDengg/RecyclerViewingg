<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.smartdengg.recyclerviewingg">

  <application
      android:allowBackup="true"
      android:icon="@mipmap/ic_launcher"
      android:label="@string/app_name"
      android:supportsRtl="true"
      android:theme="@style/AppTheme"
  >

    <activity android:name=".activity.MainActivity" android:screenOrientation="portrait">
      <intent-filter>
        <action android:name="android.intent.action.MAIN"/>
        <category android:name="android.intent.category.LAUNCHER"/>
      </intent-filter>
    </activity>

    <activity android:name=".activity.LinearActivity" android:screenOrientation="portrait"/>
    <activity android:name=".activity.LinearVerticalActivity" android:screenOrientation="portrait"/>
    <activity android:name=".activity.LinearHorizontalActivity" android:screenOrientation="portrait"/>

    <activity android:name=".activity.GridActivity" android:screenOrientation="portrait"/>
    <activity android:name=".activity.GridStandarOrHeaderdActivity" android:screenOrientation="portrait"/>
    <activity android:name=".activity.GridAutoFixActivity" android:screenOrientation="portrait"/>

    <activity android:name=".activity.StaggeredActivity" android:screenOrientation="portrait"/>

    <activity android:name=".activity.DecorationActivity" android:screenOrientation="portrait"/>
    <activity android:name=".activity.DecorationActivityyyy" android:screenOrientation="portrait"
        android:theme="@style/AppTheme.WhiteDivider"
    />

  </application>

</manifest>
